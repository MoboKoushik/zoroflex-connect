{
  "name": "zorroflex-tally-sync",
  "version": "1.0.0",
  "description": "Electron app to sync Tally data to Nest backend",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "watch": "tsc --watch",
    "package": "electron-builder"
  },
  "keywords": [
    "electron",
    "tally",
    "sync"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7",
    "@types/xml2js": "^0.4.14",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.6.0",
    "electron-store": "^8.1.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.zorroflex.tally-sync",
    "productName": "Tally Sync",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
