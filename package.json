{
  "name": "zoroflex-connect",
  "version": "1.0.0",
  "description": "Electron app to sync Tally data to Nest backend",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist release",
    "copy": "xcopy src\\renderer dist\\renderer /E /I /Y /Q",
    "build": "npm run clean && tsc && npm run copy",
    "dev": "npm run build && electron .",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package-win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "electron",
    "tally",
    "sync"
  ],
  "author": "MoboKoushik",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.7",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14",
    "copyfiles": "^2.4.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "better-sqlite3": "^9.6.0",
    "electron-store": "^8.1.0",
    "http": "^0.0.1-security",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "odbc": "^2.4.9",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.zoroflex.connect",
    "productName": "Zoroflex Connect",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
